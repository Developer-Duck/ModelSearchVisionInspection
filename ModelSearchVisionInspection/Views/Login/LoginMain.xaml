<Window x:Class="ModelSearchVisionInspection.Views.Login.LoginMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModelSearchVisionInspection.Views.Login"
        mc:Ignorable="d"
        Title="LoginMain" Height="450" Width="800">
    <Grid>
        <Grid Margin ="100 60">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Canvas >
                    <TextBlock Text="Welcome Back" FontSize="17" FontWeight="Bold" Canvas.Left="181" Canvas.Top="10"></TextBlock>
                </Canvas>
            </Grid>
            <Grid Grid.Row="1" Margin="100,0,100,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Canvas Grid.Row="0">
                    <TextBlock Text="UserName or Email" FontWeight="Bold" Foreground="#4D4D4D"></TextBlock>
                    <Border  Canvas.Top="18" CornerRadius="4" Background="White" BorderBrush="Gray" BorderThickness="1" Height="30" Width="340" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBox FontSize="11" FontWeight="Bold" Foreground="Gray" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Padding="5,0,0,0"></TextBox>
                    </Border>
                </Canvas>
                <Canvas Grid.Row="1">
                    <TextBlock Text="Password" FontWeight="Bold" Foreground="#4D4D4D"></TextBlock>
                    <Border  Canvas.Top="18" CornerRadius="4" Background="White" BorderBrush="Gray" BorderThickness="1" Height="30" Width="340" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <PasswordBox  FontSize="11" FontWeight="Bold" Foreground="Gray" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Padding="5,0,0,0"></PasswordBox>
                    </Border>
                </Canvas>
            </Grid>
            <Grid Grid.Row="2" Margin="100,0,100,0">
                <Canvas>
                    <CheckBox Canvas.Top="5" Content="Remember me " FlowDirection="RightToLeft"></CheckBox>
                    <Border Canvas.Top="30" Width="340" CornerRadius="15" Background="#3399FF" BorderBrush="Gray" BorderThickness="1" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" >
                        <Button VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Content="Login" Foreground="White" FontWeight="Bold" FontSize="11" ></Button>
                    </Border>
                    <TextBlock Canvas.Top="70" Canvas.Left="85"><Run Text="Dont't have an account?"/><Run Language="ko-kr" Text="  "/><Underline Foreground="#3399FF"><Run Foreground="#3399FF" Text="Sign Up" /></Underline></TextBlock>
                    <TextBlock Canvas.Top="95" Canvas.Left="140"  Text="Forget password?" TextDecorations="Underline" FontSize="11"/>
                </Canvas>
            </Grid>
        </Grid>
    </Grid>
</Window>
